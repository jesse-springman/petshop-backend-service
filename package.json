{
  "private": true,
  "scripts": {
    "install:all": "npm --prefix back-end install && npm --prefix front-end install",

    "dev": "npm-run-all -p dev:back dev:front",
    "dev:back": "npm --prefix back-end run start:dev",
    "dev:front": "npm --prefix front-end run dev",

    "build": "npm-run-all build:back build:front",
    "build:back": "npm --prefix back-end run build",
    "build:front": "npm --prefix front-end run build",

    "start": "npm-run-all -p start:back start:front",
    "start:back": "npm --prefix back-end run start:prod",
    "start:front": "npm --prefix front-end run start",

    "test": "npm --prefix back-end run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
